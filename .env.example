# Copy this file to .env.local and fill in with your credentials
# SMTP (Brevo recommended: smtp-relay.brevo.com:587)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
CONTACT_TO_EMAIL=
# Optional overrides
# CONTACT_FROM_EMAIL="Portfolio Contact <no-reply@yourdomain.com>"
# CONTACT_WEBHOOK_URL=https://script.google.com/macros/s/XXXX/exec

# Public site config
NEXT_PUBLIC_SITE_URL=https://your-domain.com
NEXT_PUBLIC_GA_ID=

# Azure (optional)
# Application Insights connection string (InstrumentationKey is also accepted)
NEXT_PUBLIC_APPINSIGHTS_CONNECTION_STRING=
# Function endpoints (HTTP trigger)
NEXT_PUBLIC_AZURE_FUNCTION_CONTACT_URL=
NEXT_PUBLIC_AZURE_FUNCTION_PING_URL=
NEXT_PUBLIC_AZURE_SENTIMENT_URL=
